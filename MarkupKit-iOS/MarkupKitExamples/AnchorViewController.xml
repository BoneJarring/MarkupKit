<?properties {
    "label": {
        "layer.borderColor": "#cccccc"
    }
}?>

<?case iOS?>
<?properties {
    "label": {
        "layer.borderWidth": 0.5
    }
}?>
<?case tvOS?>
<?properties {
    "label": {
        "layer.borderWidth": 1
    }
}?>
<?end?>

<LMAnchorView layoutMarginsRelativeArrangement="false"
    topSpacing="16" bottomSpacing="16" leadingSpacing="16" trailingSpacing="16"
    backgroundColor="white">
    <UILabel class="label" text="Top Leading" anchor="top, leading"/>
    <UILabel class="label" text="Top" anchor="top"/>
    <UILabel class="label" text="Top Trailing" anchor="top, trailing"/>

    <UILabel class="label" text="Leading" anchor="leading"/>

    <UILabel class="label" text="None"/>

    <UILabel class="label" text="Trailing" anchor="trailing"/>

    <UILabel class="label" text="Bottom Leading" anchor="bottom, leading"/>
    <UILabel class="label" text="Bottom" anchor="bottom"/>
    <UILabel class="label" text="Bottom Trailing" anchor="bottom, trailing"/>
</LMAnchorView>
