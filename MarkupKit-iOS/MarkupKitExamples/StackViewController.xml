<UIStackView axis="vertical" spacing="8" layoutMarginsRelativeArrangement="true">
    <LMSpacer height="8"/>

    <UILabel text="Labels" font="headline"/>

    <UIStackView axis="horizontal" spacing="8" layoutMargins="12" layoutMarginsRelativeArrangement="true">
        <UILabel text="One" font="body"/>
        <UILabel text="Two" font="body"/>
        <UILabel text="Three" font="body"/>
        <LMSpacer/>
    </UIStackView>

    <UILabel text="Image Views" font="headline"/>

    <UIStackView axis="horizontal" spacing="8" layoutMargins="12" layoutMarginsRelativeArrangement="true">
        <UIImageView image="vw.png"/>
        <UIImageView image="mini.png"/>
        <UIImageView image="chevy.png"/>
        <LMSpacer/>
    </UIStackView>

    <UILabel text="Text Fields" font="headline"/>

    <UIStackView axis="horizontal" distribution="fillProportionally" spacing="8" layoutMargins="12" layoutMarginsRelativeArrangement="true">
        <UITextField placeholder="City" font="body" borderStyle="roundedRect"/>
        <UITextField placeholder="State" font="body" borderStyle="roundedRect"/>
        <UITextField placeholder="Zip" font="body" borderStyle="roundedRect"/>
    </UIStackView>

    <LMSpacer/>
</UIStackView>
