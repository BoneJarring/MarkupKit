<UIStackView axis="vertical" spacing="8">
    <UILabel text="Labels" font="System-Bold 16"/>

    <UIStackView axis="horizontal" spacing="8" layoutMargins="12" layoutMarginsRelativeArrangement="true">
        <UILabel text="One"/>
        <UILabel text="Two"/>
        <UILabel text="Three"/>
        <LMSpacer/>
    </UIStackView>

    <UILabel text="Image Views" font="System-Bold 16"/>

    <UIStackView axis="horizontal" spacing="8" layoutMargins="12" layoutMarginsRelativeArrangement="true">
        <UIImageView image="vw.png"/>
        <UIImageView image="mini.png"/>
        <UIImageView image="chevy.png"/>
        <LMSpacer/>
    </UIStackView>

    <UILabel text="Text Fields" font="System-Bold 16"/>

    <UIStackView axis="horizontal" distribution="fillProportionally" spacing="8" layoutMargins="12" layoutMarginsRelativeArrangement="true">
        <UITextField placeholder="City" borderStyle="roundedRect"/>
        <UITextField placeholder="State" borderStyle="roundedRect"/>
        <UITextField placeholder="Zip" borderStyle="roundedRect"/>
    </UIStackView>

    <LMSpacer/>
</UIStackView>
