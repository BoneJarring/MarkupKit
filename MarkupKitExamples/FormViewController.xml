<?properties {
    "label": {
        "font": "body"
    },
    "textfield": {
        "font": "System 14", "borderStyle": "roundedRect"
    }
}?>

<LMScrollView fitToWidth="true" backgroundColor="#ffffff">
    <LMColumnView alignToGrid="true" layoutMargins="20">
        <LMRowView alignToBaseline="true">
            <UILabel text="Name" class="label"/>
            <UITextField class="textfield" weight="1"/>
        </LMRowView>

        <LMRowView alignToBaseline="true">
            <UILabel text="Address" class="label"/>
            <LMColumnView weight="1">
                <UITextField placeholder="Street" class="textfield"/>

                <LMRowView alignToBaseline="true">
                    <UITextField weight="3" placeholder="City" class="textfield"/>
                    <UITextField weight="1" placeholder="State" class="textfield"/>
                </LMRowView>
            </LMColumnView>
        </LMRowView>

        <LMRowView>
            <UILabel text="Notes" class="label"/>
            <UITextView height="240" font="System 14"
                textContainerInset="7" textContainer.lineFragmentPadding="0"
                layer.borderWidth="0.5" layer.borderColor="#cdcdcd" layer.cornerRadius="6"
                weight="1"/>
        </LMRowView>
    </LMColumnView>
</LMScrollView>
