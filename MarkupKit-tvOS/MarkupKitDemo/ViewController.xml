<LMTableView style="groupedTableView">
    <!-- Image view -->
    <?sectionHeaderView?>
    <UITableViewCell textLabel.text="Image View"/>

    <LMTableViewCell>
        <UIImageView image="sample.jpg" contentMode="scaleAspectFit" height="210"/>
    </LMTableViewCell>

    <?sectionBreak?>

    <!-- Button -->
    <?sectionHeaderView?>
    <UITableViewCell textLabel.text="Button"/>

    <LMTableViewCell>
        <UIButton style="systemButton" title="Press Me" onPrimaryActionTriggered="showGreeting"/>
    </LMTableViewCell>

    <?sectionBreak?>

    <!-- Text fields -->
    <?sectionHeaderView?>
    <UITableViewCell textLabel.text="Text Fields"/>

    <LMTableViewCell>
        <UITextField placeholder="Text"/>
    </LMTableViewCell>

    <LMTableViewCell>
        <UITextField placeholder="Number" keyboardType="numberPad"/>
    </LMTableViewCell>

    <LMTableViewCell>
        <UITextField placeholder="Email Address" keyboardType="emailAddress"/>
    </LMTableViewCell>

    <LMTableViewCell>
        <UITextField placeholder="Password" secureTextEntry="true"/>
    </LMTableViewCell>

    <?sectionBreak?>

    <!-- Radio buttons -->
    <?sectionSelectionMode singleCheckmark?>

    <?sectionHeaderView?>
    <UITableViewCell textLabel.text="Radio Buttons"/>

    <UITableViewCell textLabel.text="Small"/>
    <UITableViewCell textLabel.text="Medium"/>
    <UITableViewCell textLabel.text="Large" checked="true"/>
    <UITableViewCell textLabel.text="Extra-Large"/>

    <?sectionBreak?>

    <!-- Checkboxes -->
    <?sectionSelectionMode multipleCheckmarks?>

    <?sectionHeaderView?>
    <UITableViewCell textLabel.text="Checkboxes"/>

    <UITableViewCell textLabel.text="Dog"/>
    <UITableViewCell textLabel.text="Cat" checked="true"/>
    <UITableViewCell textLabel.text="Fish"/>
    <UITableViewCell textLabel.text="Rabbit"/>
    <UITableViewCell textLabel.text="Turtle" checked="true"/>

    <?sectionBreak?>

    <!-- Segmented control -->
    <?sectionHeaderView?>
    <UITableViewCell textLabel.text="Segmented Control"/>

    <LMTableViewCell>
        <LMRowView>
            <LMSpacer/>
                <UISegmentedControl>
                    <segment title="Small"/>
                    <segment title="Medium"/>
                    <segment title="Large"/>
                    <segment title="Extra-Large"/>
                </UISegmentedControl>
            <LMSpacer/>
        </LMRowView>
    </LMTableViewCell>
</LMTableView>
